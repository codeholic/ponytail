<html>
<head>
  <title>Ponytail</title>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>
  <script>
    (function poll() {
      $.ajax({
        url: "/tail",
        dataType: 'json',
        timeout: 10000,
        success: function(message) {
          $('#screen').append(message.data + '\n');
          poll();
        },
        error: function(error) { poll(); }
      })
    })();
  </script>
</head>
<body>
<pre id="screen">
</pre>
</body>
</html
